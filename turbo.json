{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "clean": {
      "dependsOn": []
    },
    "build": {
      "dependsOn": ["clean", "^build"],
      "outputs": ["./**/dist/**", "./**/chart.css"]
    },
    "codegen": {
      "outputs": ["./**/api.ts"]
    },
    "codegen:watch": {
      "outputs": ["./**/api.ts"]
    },
    "test": {
      "outputs": ["./**/coverage/**"]
    },
    "test:watch": {
      "outputs": ["./**/coverage/**"]
    },
    "test:ci": {
      "dependsOn": ["build", "codegen"],
      "outputs": ["./**/coverage/**"]
    },
    "dist": {
      "dependsOn": ["build", "codegen"],
      "inputs": ["webpack.config.js"],
      "outputs": ["./**/dist/**"]
    },
    "start": {
      "dependsOn": ["build", "codegen"]
    },
    "stats": {
      "dependsOn": ["build", "codegen"],
      "outputs": ["./**/stats.json"]
    }
  },
  "globalDependencies": ["$NODE_ENV", "tsconfig.json"]
}
